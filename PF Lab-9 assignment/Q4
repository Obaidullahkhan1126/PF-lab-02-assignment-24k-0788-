int operations(float num1,float num2,char sign){
	float ans;
	switch(sign){
	case '+':
	 ans=num1+num2;
		break;
	case '-':
		ans=num1-num2;
		break;
	case '*':
		ans=num1*num2;
		break;
	case'/':
		if(num2!=0){
		ans=num1/num2;}
		else{
			printf("Error");
		}
		break;
	}
	printf(" %.2f",ans);
	
}
#include<stdio.h>
#include<string.h>
int main(){
	float num1,num2;
	char sign;
	printf("Enter num1: ");
	scanf("%f",&num1);
	printf("Enter num2: ");
	scanf("%f",&num2);
	printf("Enter sign: ");
	scanf(" %c",&sign);
	operations(num1,num2,sign);
return 0;
}
